<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/imc"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginTop="80px"
    android:orientation="vertical">

    <TextView
        android:id="@+id/pds"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Poids : "
        android:textColor="#FF0000"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/poi"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Poids"
        android:inputType="numberDecimal" />

    <TextView
        android:id="@+id/tail"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Taille : "
        android:textColor="#FF0000"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/taille"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Taille (en mètres)"
        android:inputType="numberDecimal" />

    <RadioGroup
        android:id="@+id/grou"
        android:layout_width="match_parent"
        android:layout_height="81dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Tension arterielle"
                android:textColor="#FF0000"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/editText3"
                    android:layout_width="190dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="Minimal"
                    android:inputType="textPersonName" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="21dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="/"
                    android:textSize="32sp" />

                <EditText
                    android:id="@+id/editText4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="Maximal"
                    android:inputType="textPersonName" />
            </LinearLayout>
        </LinearLayout>
    </RadioGroup>

    <RadioGroup
        android:id="@+id/group"
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:layout_marginBottom="5px"
        android:checkedButton="@+id/radio2"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/lay1"
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:layout_marginBottom="100px"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="63dp"
                android:layout_marginLeft="35px"
                android:text="Calculer l'IMC" />

            <Button
                android:id="@+id/button3"
                android:layout_width="166dp"
                android:layout_height="63dp"
                android:text="INTERPRETER LA TENSION" />
        </LinearLayout>

    </RadioGroup>

    <RadioGroup
        android:id="@+id/lay"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#FF0000"
        android:divider="@drawable/ic_launcher_background"
        android:orientation="horizontal" />

    <LinearLayout
        android:id="@+id/find"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="40px">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="190px"
            android:layout_marginTop="5px"
            android:foreground="#00000000"
            android:text="INFORMATIONS D'IDENTIFICATION"
            android:textAllCaps="true"
            android:textColor="#000"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20px"
            android:layout_marginBottom="20px"
            android:text="Nom: "
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40px"
            android:text="Prénom(s): "
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="190px"
            android:text="RAPPORT MÉDICAL"
            android:textColor="#000"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20px"
            android:layout_marginBottom="20px"
            android:text="Valeur de l'IMC: "
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20px"
            android:text="Interpretation de l'IMC:"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Interpretation tension: "
            android:textSize="18sp" />

    </LinearLayout>

</LinearLayout>